# ===========================================
# Backend Environment Variables
# ===========================================
# Copy this file to .env for development
# cp .env.example .env

# -------------------------------------------
# Environment Settings
# -------------------------------------------
# Options: development, production
ENVIRONMENT=development
DEBUG=True

# -------------------------------------------
# Proxy Settings
# -------------------------------------------
# Trust proxy headers (X-Real-IP, X-Forwarded-For) for client IP detection
# Trusted proxies (Vercel, Cloudflare, Nginx) sanitize these headers to prevent spoofing
# Default: false (Fail-Safe principle - only trust when explicitly configured)
# Set to true ONLY when deploying behind a trusted reverse proxy
TRUST_PROXY_HEADERS=false

# -------------------------------------------
# CORS Settings
# -------------------------------------------
# Development: http://localhost:3000
# Production: https://8px.app
ALLOWED_ORIGINS=http://localhost:3000

# -------------------------------------------
# Rate Limiting (Upstash Redis)
# -------------------------------------------
# REQUIRED in production environment (app will fail to start without these)
# Optional in development (rate limiting will be disabled)
# Get these from https://console.upstash.com/
# UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your_token_here
